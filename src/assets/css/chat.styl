.chat-dialog {
  .el-dialog {
    min-width: 1020px !important;
  }

  .el-dialog__body {
    padding: 10px;
  }
}

.global-chatting-box {
  display: flex;
  border: 1px solid #eee;
  width: 1000px;
  height: 560px;
  margin: 0 auto;
  border-radius: 4px;

  .chat-user-list {
    width: 240px;
    padding: 6px 0;
    border-right: 1px solid #eee;

    .chat-item {
      display: flex;
      align-items: center;
      margin-bottom: 8px;
      padding: 0 6px;

      &.active {
        background: #eee;
      }

      .head-box {
        position: relative;
        display: flex;
        align-items: center;
        width: 44px;
        margin-right: 6px;

        .unread-box {
          position: absolute;
          top: -6px;
          right: -4px;
          display: flex;
          align-items: center;
          justify-content: center;
          min-width: 16px;
          padding: 0 2px;
          height: 16px;
          border-radius: 8px;
          color: #fff;
          font-size: 12px;
          background: #F56C6C;
        }

        img {
          width: 44px;
          height: 44px;
          border-radius: 6px;
        }
      }

      .content-box {
        flex: 1;
        min-width: 0;
        padding: 4px 0 4px 0;
        border-bottom: 1px solid #eee;

        .title-box {
          display: flex;
          align-items: center;
          margin-bottom: 2px;

          .user-name {
            flex: 1;
            min-width: 0;
            font-size: 14px;
            margin-right: 4px;
            font-weight: 500;
            white-space: nowrap;
            text-overflow: ellipsis;
            overflow: hidden;
            word-break: break-all;
          }

          .time {
            display: flex;
            align-items: center;
            max-width: 66px;
            font-size: 12px;
          }
        }

        .recent-msg-box {
          font-size: 13px;
          white-space: nowrap;
          text-overflow: ellipsis;
          overflow: hidden;
          word-break: break-all;
          margin-bottom: 2px;
        }
      }
    }
  }

  .chat-area {
    display: flex;
    flex-direction: column;
    flex: 1;
    min-width: 0;

    .chat-messages {
      display: flex;
      flex-direction: column;
      flex: 1;
      min-height: 0;

      .user-name {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 36px;
        font-size: 14px;
        font-weight: 500;
        border-bottom: 1px solid #eee;
      }

      .chat-content {
        flex: 1;
        min-height: 0;
        overflow: hidden;
        overflow-y: scroll;
        padding: 5px;

        .load-more-btn-box {
          text-align: center;
        }
        .message-root-item {
          margin-bottom: 10px;
          .msg-time {
            font-size: 12px;
            text-align: center;
          }
          .msg-revoke {
            font-size: 14px;
            text-align: center;
            margin-top: 8px;
          }
        }
        .message-item {
          position: relative;
          display: flex;
          align-items: center;
          .msg-time-read {
            align-self: flex-end;
            margin-bottom: 6px;
            margin-right: 2px;
            font-size: 12px;
            .unreaded {
              color: #E32835;
            }
          }

          .chat-head {
            width: 32px;
            height: 32px;
            border-radius: 6px;
          }

          .message-detail {
            padding: 6px 8px;
            max-width: 70%;
            word-break: break-all;
            border-radius: 4px;
            color: #fff;

            .msg-type-text {
              padding: 6px;
              word-break: break-all;
              border-radius: 4px;
              white-space: pre-line;
            }

            .msg-type-image {
              max-width: 400px;
              border-radius: 4px;
            }

            .msg-type-voice {
              display: flex;
              align-items: center;
              width: 200rpx;
              height: 32px;
              border-radius: 4px;
              padding: 0 6px;

              .sound-img {
                width: 15px;
                height: 18px;
              }

              &-out {
                .sound-img {
                  order: 2;
                  margin-left: 4px;
                }

                .voice-duration-text {
                  order: 1;
                }
              }

              &-in {
                .sound-img {
                  order: 1;
                  margin-right: 4px;
                }

                .voice-duration-text {
                  order: 2;
                }
              }
            }

            .msg-type-video {
              max-width: 300px;

              video {
                width: 100%;
              }
            }

            .msg-type-custom {
              display: flex;
              flex-direction: column;
              width: 300px;
              .img {
                width: 300px;
                height: 180px;
                border-radius: 8px 8px 0 0;
              }
              .house-container {
                padding: 10px;
                background: #eee;
                .house-name {
                  font-size: 16px;
                  color: #333;
                  font-weight: 500;
                  margin-bottom: 8px;
                }
                .house-address {
                  font-size: 13px;
                  color: #aaa;
                  margin-bottom: 8px;
                }
                .house-detail {
                  display: flex;
                  align-items: center;
                  justify-content: space-between;
                  .house-price {
                    font-size: 14px;
                    color: #E32835;
                    font-weight: 500;
                  }
                  .house-tag {
                    display: flex;
                    align-items: center;
                    justify-content: center;
                    height: 20px;
                    font-size: 12px;
                    padding: 0 10px;
                    border-radius: 4px;
                    background-image: linear-gradient(135deg, #FF906D 0%, #FB453F 100%);
                    color: #fff;
                  }
                }

              }
              
            }
          }

          &.msg-in {
            .chat-head {
              margin-right: 4px;
              order: 1;
            }

            .message-detail {
              order: 2;
            }

            .msg-type-text,
            .msg-type-voice {
              background: #767C8E;
            }
          }

          &.msg-out {
            justify-content: flex-end;

            .chat-head {
              margin-left: 4px;
              order: 2;
            }

            .message-detail {
              order: 1;
            }

            .msg-type-text,
            .msg-type-voice {
              background: #E32835;
            }
          }
        }
      }
    }

    .chat-ipt-box {
      display: flex;
      flex-direction: column;
      height: 150px;
      background: rgb(244 244 245);
      padding: 10px;

      .el-textarea {
        flex: 1;
      }

      .send-btns {
        height: 30px
      }

      .el-textarea textarea {
        width: 100%;
      }

      .send-btns {
        display: flex;
        // justify-content: flex-end;
        justify-content: space-between;
        margin-top: 5px;
        .send-file-box {
          display: flex;
          align-items: center;
        }
      }
    }
  }
}